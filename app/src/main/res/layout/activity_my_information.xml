<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MyInformation">

    <TextView
        android:layout_marginTop="10dp"
        style="@style/textBasic"
        android:gravity="center"
        android:textSize="24sp"
        android:text="내 정보"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/my_ID"
            android:layout_width="match_parent"
            style="@style/textBasic"
            android:text=""
            android:textSize="19dp"/>
        <TextView
            android:id="@+id/my_SEX"
            android:layout_width="match_parent"
            style="@style/textBasic"
            android:text=""
            android:textSize="19dp"/>
        <TextView
            android:id="@+id/my_KAKAO"
            android:layout_width="match_parent"
            style="@style/textBasic"
            android:text=""
            android:textSize="19dp"/>
        <TextView
            android:id="@+id/my_INTRO"
            android:layout_width="match_parent"
            style="@style/textBasic"
            android:text=""
            android:textSize="19dp"/>
        <TextView
            android:id="@+id/my_AVG"
            android:layout_width="match_parent"
            style="@style/textBasic"
            android:text=""
            android:textSize="19dp"/>
        <TextView
            android:id="@+id/my_SERVICE"
            android:layout_width="match_parent"
            style="@style/textBasic"
            android:text=""
            android:textSize="19dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:background="@drawable/button_custom"
            android:textColor="@color/btnInner"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/change_image"
            android:text="사진 변경" />

        <Button
            android:background="@drawable/button_custom"
            android:textColor="@color/btnInner"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/change_intro"
            android:text="한줄소개 변경" />

        <Button
            android:background="@drawable/button_custom"
            android:textColor="@color/btnInner"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/change_service"
            android:text="쪽지 수신 여부" />

    </LinearLayout>

</LinearLayout>