<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Activity.PackageDetailsActivity">

    <TextView
        style="@style/textBasic"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="데이트 장소 선택"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:background="@drawable/button_custom"
            android:id="@+id/cafe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/btnInner"
            android:text="카페"/>

        <TextView
            style="@style/textBasic"
            android:id="@+id/cafe_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/button_custom"
            android:id="@+id/meal_button"
            android:textColor="@color/btnInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식사"/>

        <TextView
            style="@style/textBasic"
            android:id="@+id/meal_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/button_custom"
            android:id="@+id/movie_button"
            android:textColor="@color/btnInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영화"/>

        <TextView
            style="@style/textBasic"
            android:id="@+id/movie_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/button_custom"
            android:id="@+id/pub_button"
            android:textColor="@color/btnInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주점"/>

        <TextView
            style="@style/textBasic"
            android:id="@+id/pub_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:background="@drawable/button_custom"
                android:id="@+id/btnBack"
                android:textColor="@color/btnInner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="back"/>

            <Button
                android:background="@drawable/button_custom"
                android:id="@+id/next_button"
                android:textColor="@color/btnInner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="next"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>